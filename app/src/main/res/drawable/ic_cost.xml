<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo rectangular con bordes redondeados -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#abf4c3"/>
            <corners android:radius="12dp"/>
            <size
                android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>
    <!-- Menejando el padding del logo -->
    <item
        android:drawable="@drawable/costo"
        android:width="32dp"
        android:height="32dp"
        android:gravity="center"/>
</layer-list>